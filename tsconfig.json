{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": [
      "node",
      "@playwright/test"
    ],
    "skipLibCheck": true
  },
  "include": [
    "playwright.config.ts",
    "tests/**/*.ts"
  ]
}
